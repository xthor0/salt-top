  import "generic-host"

  address = "127.0.0.1"
  address6 = "::1"

  vars.os = "Linux"

  vars.http_vhosts["http"] = {
    http_uri = "/"
  }

  vars.http_vhosts["Icinga Web 2"] = {
    http_uri = "/icingaweb2"
  }

  vars.disks["disk"] = {
    /* No parameters. */
  }

  vars.notification["pushover"] = {
    groups = [ "icingaadmins" ]
  }
}

